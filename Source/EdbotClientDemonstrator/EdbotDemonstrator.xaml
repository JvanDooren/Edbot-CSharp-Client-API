<Window x:Class="EdbotClientDemonstrator.EdbotDemonstrator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EdbotClientDemonstrator"
        mc:Ignorable="d"
        Title="EdbotDemonstrator" Height="350" Width="525">
    <Grid>
        <Image x:Name="EdbotOverviewImage" HorizontalAlignment="Left" Height="280" Margin="20,20,0,0" VerticalAlignment="Top" Width="200"/>
        <Button x:Name="LedsOnButton" Content="Leds on" HorizontalAlignment="Left" Margin="240,60,0,0" VerticalAlignment="Top" Width="75" Click="LedsOnButton_Click"/>
        <Button x:Name="LedsOffButton" Content="Leds off" HorizontalAlignment="Left" Margin="325,60,0,0" VerticalAlignment="Top" Width="75" Click="LedsOffButton_Click"/>
        <ListBox x:Name="ConnectedEdbots" HorizontalAlignment="Left" Height="20" Margin="240,20,0,0" VerticalAlignment="Top" Width="160" SelectionChanged="Edbots_SelectionChanged"/>

    </Grid>
</Window>
